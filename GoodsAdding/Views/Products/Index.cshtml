@using BLL.DTOModels;
@model List<ProductDTO>
@{
    ViewBag.Title = "Index";
}

<h2>Product list</h2>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Count</th>
        </tr>
    </thead>
    <tbody>
        @{int total = 0; }
        @{ for (var i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@Model[i].Name</td>
                    <td>@Model[i].Price</td>
                    <td>@Model[i].Count</td>
                    @{ total += Model[i].Count;}
                </tr>
            }
        }
    </tbody>
    <tfoot>
        <tr>
            <th>Total:</th>
            <th></th>
            <th>@total</th>        
        </tr>
    </tfoot>
</table>

